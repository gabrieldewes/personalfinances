@model MyApp.Models.UserDTO
@{
    ViewData["Title"] = "Faça login";
}
<div class="container">
    
    <div class="row col-sm-6 col-md-offset-3">

        <div class="page-header">
            <h2>@ViewData["Title"]</h2>
        </div>

        <form asp-controller="Account" asp-action="Login" method="POST">
            <div class="row col-sm-8 well well-lg">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="username" class="col-form-label">Usuário</label>
                    <div class="">
                        <span asp-validation-for="username" class="text-danger"></span>
                        <input asp-for="username" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="col-form-label">Senha</label>
                    <div class="">
                        <span asp-validation-for="password" class="text-danger"></span>
                        <input asp-for="password" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <button class="btn btn-success col-md-12" type="submit">Sign In <span class="glyphicon glyphicon-send"></span></button>
                </div>
            </div>
            <div class="row col-sm-8 well well-sm">
                <label for="">Novo por aqui? </label>
                <a href="/Account/Register">Registre-se!</a>
            </div>
        </form>
    </div>
</div>

